{
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["./src/main/js/**/*"],
  "exclude": ["node_modules"]
}
